### variable definitions

# Use Alt for mod key
    set $mod Mod1

# Default terminal = foot
    set $term foot

# sway menu

    set $rofi_cmd rofi -terminal '$term'
    set $menu $rofi_cmd -show combi -combi-modes drun#run -modes combi

# lock / screen timeouts

    # 20 minute lock timeout
    set $lock_timeout 1200

    # 10 minutes after lock timeout, turn the displays off
    set $screen_timeout 600

# Workspace names

    set $ws1 1:Scratch
    set $ws2 2:Scratch
    set $ws3 3:Slack | OneNote
    set $ws4 4:Terminal
    set $ws5 5:VPN
    set $ws6 6:Firefox | Mail
    set $ws7 7:VS Code
    set $ws8 8:VS Code
    set $ws9 9:VS Code
    set $ws10 10:Zoom
    set $wsF1 F1:Scratch
    set $wsF2 F2:Scratch
    set $wsF3 F3:Scratch
    set $wsF4 F4:Scratch
    set $wsF5 F5:Scratch
    set $wsF6 F6:Scratch
    set $wsF7 F7:Scratch
    set $wsF8 F8:Scratch
    set $wsF9 F9:Scratch
    set $wsF10 F10:Scratch
    set $wsF11 F11:Scratch
    set $wsF12 F12:Scratch

### Workspace bindings

